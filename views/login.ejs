<!DOCTYPE html>
<html lang="en">
<head>
	<title>Paytm Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="losupcss/favicon.ico"/>
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="losupcss/bootstrap.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="losupcss/font-awesome.min.css">
	<script src="https://kit.fontawesome.com/c35009fcc8.js" crossorigin="anonymous"></script>
	<link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="losupcss/animate.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="losupcss/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="losupcss/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="losupcss/util.css">
	<link rel="stylesheet" type="text/css" href="losupcss/main.css">
<!--===============================================================================================-->
</head>
<style>
body{
    color: #fff;
    text-align: center;
    position: relative;
    margin-left: 30%;
}
</style>
<body style="margin-left: 0px;">

    <div class="limiter" >
        <% if(flag===1){ %>
            <h1 style="background-color:#fff;color: #ef4b4b;padding: 10%;margin-bottom: 0;" class="jumbotron">The Credentials You Provided Are Invalid, Please Try Again</h1>
            
        <% } %>
        
        <div class="container-login100" style="padding-top:0px;">
            <div class="wrap-login100" style="padding-top:50px;">
                <!-- <div class="login100-pic js-tilt" data-tilt>
                    <img src="images/img-01.png" alt="IMG">
                </div> -->

                <form class="login100-form validate-form"  action="/auth" method="POST" style=" margin-left: 30% ;">
                    <span class="login100-form-title" style="color: #0a77bf;padding-bottom: 5px;">
                           <b>Payment Wallet</b> 
                    </span>
                    <span class="login100-form-title">
                        Member Login
                    </span>

                    <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
                        <input class="input100" type="text" name="username" placeholder="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate = "Password is required">
                        <input id="pass" class="input100" type="password" name="password" placeholder="Password" onclick="disablePaste()" onCopy="return false" onCut="return false">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>


                    <div class="container-login100-form-btn" >
                        <input class="login100-form-btn .submit_on_enter" style="background-color: #0a77bf;" type="submit">
                            Login
                    </input>
                    <input type="submit" hidden="true" />
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="/forgot">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/signUp">
                            Create your Account
                            <i class="fas fa-arrow-right" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script type="text/javascript">
    function disablePaste() {
        const myInput = document.getElementById('pass');
            myInput.onpaste = function(e) {
            e.preventDefault();
            }
        }
        // Using jQuery.
        
        $(document).ready(function() {

            $('.submit_on_enter').keydown(function(event) {
            // enter has keyCode = 13, change it if you want to use another button
            if (event.keyCode == 13) {
                this.form.submit();
                return false;
            }
            });

        });

        
    </script>
    <script type="text/javascript">
    
    function noBack(){window.history.forward()}
        noBack();
        window.onload=noBack;
        window.onpageshow=function(evt){if(evt.persisted)noBack()}
        window.onunload=function(){void(0)}
    </script>
    <script src="losupjs/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
    <script src="losupjs/popper.js"></script>
    <script src="losupjs/bootstrap.min.js"></script>
<!--===============================================================================================-->
    <script src="losupjs/select2.min.js"></script>
<!--===============================================================================================-->
    <script src="losupjs/tilt.jquery.min.js"></script>
    <script >
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
<!--===============================================================================================-->
    <script src="losupjs/main_login.js"></script>

</body>
</html>