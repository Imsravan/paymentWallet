<body>
	
  <div class=" container-scroller">
    <%- include("partials/navbar.ejs"); -%>
       <div class="main-panel">        
        <div class="content-wrapper">
          <div class="row">
            <div class="col-lg-12 grid-margin">
              <div class="card">
				  <form action="/rechargemobile" method="post">
					<div class="card-body">
					<div class="row icons-list">
					<span style="padding:10px;font-size:20px;color:#666;">+91</span>
					<input type="tel" class="form-control" name="mobilenumber" placeholder="Mobile or Account Number" aria-label="search" aria-describedby="search" style="width:40%;background:#e6e6e6;border-radius:5px;color:#444;" pattern="^([7-9]{1})([0-9]{9})$" maxlength=10 minlength=10 required>
						<select class="browser-default custom-select" style="margin:5px;width:40%;" required>
							<option selected>Provider</option>
							<option value="1">JIO</option>
							<option value="2">AIRTEL</option>
						</select>
					</div>
					<button class="btn btn-lg btn-primary" type="submit" style="display:inline;margin:5px;">Proceed</button>
					</div>
				  </form>
              </div>
            </div>
          </div>
        </div>
        <!-- partial:../../partials/_footer.html -->
